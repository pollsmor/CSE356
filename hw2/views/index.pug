doctype=html
html(lang="en")
  head 
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    style 
      include ../public/css/style.css
    title= pageTitle 
    script
      include ../public/js/script.js
  body 
    h1 Hello !{name}, !{date}
    h3 It is currently <span id="turn">X</span>'s turn.
    div#grid
      div(id="cell_0" class="cell" onclick="makeMove(this)")
        h1.player &nbsp
      div(id="cell_1" class="cell" onclick="makeMove(1)")
        h1.player X
      div(id="cell_2" class="cell" onclick="makeMove(2)")
        h1.player X
      div(id="cell_3" class="cell" onclick="makeMove(3)")
        h1.player X
      div(id="cell_4" class="cell" onclick="makeMove(4)")
        h1.player X
      div(id="cell_5" class="cell" onclick="makeMove(5)")
        h1.player X
      div(id="cell_6" class="cell" onclick="makeMove(6)")
        h1.player X
      div(id="cell_7" class="cell" onclick="makeMove(7)")
        h1.player X
      div(id="cell_8" class="cell" onclick="makeMove(8)")
        h1.player X
  